<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>equochromium</groupId>
	<artifactId>swt</artifactId>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>

	<properties>
		<maven.compiler>11</maven.compiler>
		<swt.version>3.121.0</swt.version>
		<chromium.version>106.0.22</chromium.version>
		<chromium.platform.version>106.0.20</chromium.platform.version>
		<arch>${os.arch}</arch>
	</properties>

	<repositories>
		<repository>
			<id>Equo-Chromium</id>
			<url>https://dl.equo.dev/chromium-swt-ee/equo-gpl/mvn</url>
		</repository>
	</repositories>

	<dependencies>
		<dependency>
			<groupId>org.eclipse.platform</groupId>
			<artifactId>org.eclipse.swt</artifactId>
			<version>${swt.version}</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.platform</groupId>
			<artifactId>org.eclipse.swt.${platform}.${arch}</artifactId>
			<version>${swt.version}</version>
		</dependency>
		<dependency>
			<groupId>com.equo</groupId>
			<artifactId>com.equo.chromium</artifactId>
			<version>${chromium.version}</version>
		</dependency>
		<dependency>
			<groupId>com.equo</groupId>
			<artifactId>com.equo.chromium.cef.${platform}.${arch}</artifactId>
			<version>${chromium.platform.version}</version>
		</dependency>
	</dependencies>

	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>${maven.compiler}</source>
					<target>${maven.compiler}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>3.1.0</version>
				<executions>
					<execution>
						<phase>verify</phase>
						<goals>
							<goal>exec</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<executable>java</executable>
					<arguments>
						<argument>${flags}</argument>
						<argument>-classpath</argument>
						<classpath />
						<argument>equochromium.SampleSWT</argument>
						<argument>${windowless}</argument>
					</arguments>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<family>linux</family>
				</os>
			</activation>
			<properties>
				<flags>-Dchromium.init_threads=true</flags>
				<platform>gtk.linux</platform>
			</properties>
		</profile>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<flags>-Dempty</flags>
				<platform>win32.win32</platform>
			</properties>
		</profile>
		<profile>
			<id>mac</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<properties>
				<flags>-XstartOnFirstThread</flags>
				<platform>cocoa.macosx</platform>
			</properties>
		</profile>
		<profile>
			<id>amd64</id>
			<activation>
				<os>
					<arch>amd64</arch>
				</os>
			</activation>
			<properties>
				<arch>x86_64</arch>
			</properties>
		</profile>
	</profiles>
</project>
